<UserControl x:Class="intf.FlashMessages.FlashMessages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:intf.FlashMessages"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:b="clr-namespace:Common.Behaviors;assembly=Common"
             xmlns:flashMessages="clr-namespace:Common.FlashMessages;assembly=Common"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

